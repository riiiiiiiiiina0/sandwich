{
  "manifest_version": 3,
  "name": "Sandwich Bear",
  "version": "1.35",
  "description": "Select and view tabs in a split screen layout.",
  "icons": {
    "16": "icons/icon-16x16.png",
    "32": "icons/icon-32x32.png",
    "48": "icons/icon-48x48.png",
    "128": "icons/icon-128x128.png"
  },
  "action": {
    "default_title": "Sandwich Bear"
  },
  "commands": {
    "toggle-split-view": {
      "suggested_key": {
        "default": "Ctrl+S",
        "mac": "Command+S"
      },
      "description": "Create split page from highlighted tabs, or ungroup iframes in split page into browser tabs"
    }
  },
  "permissions": [
    "tabs",
    "clipboardWrite",
    "declarativeNetRequest",
    "contextMenus",
    "scripting",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "type": "module",
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content/title-probe.js",
        "src/content/frame-connector.js"
      ],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content/anchor.js"
      ],
      "run_at": "document_idle",
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/split.html",
        "src/split/*",
        "docs/libs/*",
        "docs/shared/*"
      ],
      "matches": [
        "https://riiiiiiiiiina0.github.io/*"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://riiiiiiiiiina0.github.io/*"
    ]
  }
}
