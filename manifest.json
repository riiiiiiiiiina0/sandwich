{
  "manifest_version": 3,
  "name": "Sandwich Bear",
  "version": "1.0",
  "description": "Select and view tabs in a split screen layout.",
  "permissions": [
    "tabs",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "src/popup.html"
  },
  "background": {
    "service_worker": "src/background.js"
  }
}